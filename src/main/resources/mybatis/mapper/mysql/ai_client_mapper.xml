<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cug.sxy.ai.infrastructure.dao.mysql.IAiClientDao">

    <resultMap id="AiClientMap" type="cn.cug.sxy.ai.infrastructure.dao.po.AiClientPO">
        <id column="id" property="id"/>
        <result column="client_id" property="clientId"/>
        <result column="client_name" property="clientName"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="AiClientBaseColumn">
        id, client_id, client_name, description, status, create_time, update_time
    </sql>

    <insert id="insert" parameterType="cn.cug.sxy.ai.infrastructure.dao.po.AiClientPO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ai_client (
            client_id, client_name, description, status, create_time, update_time
        ) VALUES (
            #{clientId}, #{clientName}, #{description}, #{status}, #{createTime}, #{updateTime}
        )
    </insert>

    <update id="updateById" parameterType="cn.cug.sxy.ai.infrastructure.dao.po.AiClientPO">
        UPDATE ai_client SET
            client_id = #{clientId},
            client_name = #{clientName},
            description = #{description},
            status = #{status},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <update id="updateByClientId" parameterType="cn.cug.sxy.ai.infrastructure.dao.po.AiClientPO">
        UPDATE ai_client
        SET client_name = #{clientName},
            description = #{description},
            status      = #{status},
            update_time = #{updateTime}
        WHERE client_id = #{clientId}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM ai_client WHERE id = #{id}
    </delete>

    <delete id="deleteByClientId" parameterType="java.lang.String">
        DELETE FROM ai_client WHERE client_id = #{clientId}
    </delete>

    <select id="queryById" parameterType="java.lang.Long" resultMap="AiClientMap">
        SELECT
        <include refid="AiClientBaseColumn"/>
        FROM ai_client
        WHERE id = #{id}
    </select>

    <select id="queryByClientId" parameterType="java.lang.String" resultMap="AiClientMap">
        SELECT
        <include refid="AiClientBaseColumn"/>
        FROM ai_client
        WHERE client_id = #{clientId}
    </select>

    <select id="queryEnabledClients" resultMap="AiClientMap">
        SELECT
        <include refid="AiClientBaseColumn"/>
        FROM ai_client
        WHERE status = 1
        ORDER BY create_time DESC
    </select>

    <select id="queryByClientName" parameterType="java.lang.String" resultMap="AiClientMap">
        SELECT
        <include refid="AiClientBaseColumn"/>
        FROM ai_client
        WHERE client_name LIKE CONCAT('%', #{clientName}, '%')
        ORDER BY create_time DESC
    </select>

    <select id="queryAll" resultMap="AiClientMap">
        SELECT
        <include refid="AiClientBaseColumn"/>
        FROM ai_client
        ORDER BY create_time DESC
    </select>

    <select id="queryEnabledClientIds" resultType="java.lang.String">
        SELECT client_id
        FROM ai_client
        WHERE status = 1
    </select>

</mapper>